  "related_applications": [],
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "protocol_handlers": [
    {
      "protocol": "web+rmcrm",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            "image/*",
            "application/pdf",
            "text/plain"
          ]
        }
      ]
    }
  },
  "permissions": [
    "notifications",
    "geolocation",
    "camera",
    "microphone",
    "storage-access"
  ],
  "features": [
    "cross-origin-isolated"
  ],
  "navigation_scope": "/",
  "id": "rm-crm-pro-plus",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "note_taking": {
    "new_note_url": "/new-note"
  },
  "lock_screen": {
    "start_url": "/lock-screen"
  },
  "widgets": [
    {
      "name": "Métricas Rápidas",
      "short_name": "Métricas",
      "description": "Visualização rápida das principais métricas",
      "tag": "metrics",
      "ms_ac_template": "widgets/metrics-template.json",
      "data": "/api/widget/metrics",
      "type": "application/json",
      "screenshots": [
        {
          "src": "widgets/metrics-screenshot.png",
          "sizes": "300x200",
          "label": "Widget de métricas"
        }
      ],
      "icons": [
        {
          "src": "icons/widget-metrics.png",
          "sizes": "72x72",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Clientes Recentes",
      "short_name": "Clientes",
      "description": "Lista dos clientes mais recentes",
      "tag": "clients",
      "ms_ac_template": "widgets/clients-template.json",
      "data": "/api/widget/clients",
      "type": "application/json",
      "screenshots": [
        {
          "src": "widgets/clients-screenshot.png",
          "sizes": "300x200",
          "label": "Widget de clientes"
        }
      ],
      "icons": [
        {
          "src": "icons/widget-clients.png",
          "sizes": "72x72",
          "type": "image/png"
        }
      ]
    }
  ],
  "scope_extensions": [
    {
      "origin": "https://wa.me"
    },
    {
      "origin": "https://api.whatsapp.com"
    }
  ],
  "capture_links": "existing-client-navigate",
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "screenshots/*.png",
        "widgets/*.json"
      ],
      "matches": ["*://localhost/*", "*://127.0.0.1/*"]
    }
  ],
  "background_sync": [
    "clients-sync",
    "services-sync",
    "quotes-sync"
  ],
  "gcm_sender_id": "103953800507",
  "gcm_user_visible_only": true,
  "custom": {
    "company": {
      "name": "R.M. Estética Automotiva",
      "cnpj": "18.637.639/0001-48",
      "address": "Rua 40, TV - Recanto dos Pássaros, Pq. Mambucaba, Angra dos Reis - RJ",
      "phone": "(24) 99948-6232",
