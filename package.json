{
  "name": "gestor-proplus",
  "version": "2.0.0",
  "description": "Sistema completo de CRM para gestão de estética automotiva",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 3000 -c-1",
    "dev": "http-server -p 3000 -c-1 --cors",
    "build": "echo 'Static site - no build needed'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/ --fix",
    "format": "prettier --write .",
    "serve": "http-server -p 3000",
    "deploy": "gh-pages -d ."
  },
  "keywords": [
    "crm",
    "automotive",
    "pwa",
    "management",
    "car-wash",
    "estética-automotiva",
    "gestão",
    "clientes",
    "orçamentos"
  ],
  "author": "R.M. Estética Automotiva",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rogerinhoam/gestor-proplus.git"
  },
  "homepage": "https://rogerinhoam.github.io/gestor-proplus",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "gh-pages": "^6.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!**/node_modules/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not < 2%"
  ]
}
