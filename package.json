{
  "name": "gestor-proplus",
  "version": "2.0.0",
  "description": "Sistema de CRM para estética automotiva",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "http-server -p 3000",
    "build": "echo 'No build process needed for static files'",
    "lint": "eslint js/ --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "@supabase/supabase-js": "^2.51.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "http-server": "^14.1.1",
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!**/node_modules/**"
    ]
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", {
        "targets": {
          "node": "current"
        }
      }]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  },
  "keywords": [
    "crm",
    "automotive",
    "pwa",
    "management",
    "car-wash"
  ],
  "author": "R.M. Estética Automotiva",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rogerinhoam/gestor-proplus.git"
  }
}
